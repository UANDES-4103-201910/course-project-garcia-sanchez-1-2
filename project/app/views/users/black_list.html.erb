

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Username</th>
      <th>Name</th>
      <th>Last name</th>

    </tr>
  </thead>

  <tbody>
    <h2>Black list</h2>

    <% if current_user.role == 2%>
    <% users = User.where(black_list: true, city: current_user.city) %>
        <td><strong>Users</strong></td>
    <% elsif current_user.role == 3%>
    <% users = User.where(black_list: true)%>
        <td><strong>Users</strong></td>
    <% end -%>
        
    <% users.each do |user| %>
      <tr>
        <td><%= user.username%></td>
        <td><%= user.name%></td>
        <td><%= user.last_name%></td>
        <td><%= link_to 'Show', user , class: "display btn-outline-light"%></td>
        <td><%= link_to 'Edit', edit_user_path(user) , class: "display btn-outline-light"%></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } , class: "display btn-outline-light"%></td>
        <td>
          <%= form_with(model: user, local: true) do |f| %>
            <%=f.check_box :black_list%>
            <%=f.submit 'Black list'%>
          <% end -%>
        </td>
      </tr>
    <% end %>

    


 

  </tbody>
</table>

<br>


