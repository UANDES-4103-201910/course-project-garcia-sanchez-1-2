
<!DOCTYPE html>
<html>
<title>Navigation Bar</title>
<body >  
  



<div class="row" style="margin-top: 100px">   
</div>

<div class = "row">
  
    

    <dir class="col-md-7 offset-1">

      <% current = current_user.id%>
      <h1> <%= @user.name%> <%= @user.last_name%> </h1> 
      <h4> <%= @user.username%> </h4> 
      <h4> <%= @user.phone%></h4>
      <h4> <%= @user.city%></h4>
      <h4> <%= @user.country%></h4>


      <div class="row" style="margin-left: 0px">
        <div class="col-md-8"></div>
        <div class="col-md-4" >
          <select class="browser-default custom-select">
            <option value="1">Newest</option>
            <option value="2">Trendding tropic</option>
            <option value="3">Oldest</option>
          </select>
        </div>
      </div>
      <hr />

      
      <% @posts.each do |p| %>

        <div class="container" style="background-color:#f8f9fa">
          
        <div class="col-md-14">
        
        <div class="row">
        

        <h2 class = " btn btn-outline-light active" style = "font-size:30px" ><%= link_to p.title, p%></h2>
        </div>
        
        <div class="row">
        <div class = "btn btn-outline-light active"><%= p.description %></div>
        </div>

        <div class="row">
          <div class = "btn btn-outline-light active"> author <%= p.id %></div>
        </div>
        
        <!-- wea 1-->
        <div class="row">
          
        <div class="col-md-8">
          
        
        <div class = "row" >
          <div class="btn btn-outline-light active ">
            <%= p.created_at %>   
          </div>  
        </div>
        <div class="row">
          
          <div class = "btn btn-outline-light active"> Solved</div>

        </div>

        </div class = "col-md-8">

        <div style="margin-left:0px">
          <button class="btn"></button>
          <button class="btn"></button>

          <button class = "btn btn-outline-light" style='font-size:25px;color:black'>Share</button>
          <button class = "btn btn dark" style='font-size:25px;color:black'>99 <i class='fas fa-check' style='font-size:25px;color:black'></i></button>
          <button class = "btn btn dark" style='font-size:25px;color:black'>99 <i class='fas fa-times' style='font-size:25px;color:black'></i></button>
        </div>  
        <hr />
            
          <div class = " btn btn-outline-light active"><%= link_to 'Edit ', edit_post_path(p) %></div>
          
          <div class = " btn btn-outline-light active"><%= link_to 'Destroy', p, method: :delete, data: { confirm: 'Are you sure?' } %></div>
          </div> 
        
        <hr />
        
      <% end %>
    </div>
    </div>
</div>



</body>
</html>
