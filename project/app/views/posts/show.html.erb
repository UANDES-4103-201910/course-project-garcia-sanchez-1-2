<body>
  
<div class="row" style="margin-top: 100px">
  <div class="col-md-2"></div>
  <div class="col-md-6">
  <h2><%= @post.title %></h2>
  </div>
  <div class="col-md-4"></div>
  
</div>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-5">
      <div class="md-form">
        <strong>Description:</strong>
        <%= @post.description %>
      </div>
      <div class="md-form">
        <textarea id="form7" class="md-textarea form-control" style="overflow: hidden; word-wrap: break-word;" rows="8" readonly><%= @post.body %></textarea>
        
      </div>
      <div>

        <strong>Lotation:</strong>
        <%= @post.country %>

        <%= @post.city %>
      </div>
      <div class="col-md-5"></div>
    </div>
</div>

</body>
<%= link_to 'Edit', edit_post_path(@post) %> |
