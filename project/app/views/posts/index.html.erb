
<!DOCTYPE html>
<html>
<head>


</head>
<title>Navigation Bar</title>
<body >  

<div class="row" style="margin-top: 100px">   
</div>

<div class = "row">
  
    <dir class="col-md-7 offset-1">
    <h1>Hello you!</h1>
      <div class="row" style="margin-left: 0px">
        <div class="col-md-8"></div>
        <div class="col-md-4" >
          <select class="browser-default custom-select">
            <option value="1">Newest</option>
            <option value="2">Trendding tropic</option>
            <option value="3">Oldest</option>
          </select>
        </div>
      </div>
      <hr />
      
      <% @posts.each do |p| %>
        <div class="container" style="background-color:#f8f9fa">          
        <div class="col-md-14">

        <div class="row">
        <h2 class = " btn btn-outline-light active" style = "font-size:30px" ><%= link_to p.title, p%></h2>            
        </div>

        <div class="row">
        <div class = "btn btn-outline-light active"><%= p.description %></div>
        </div>

        <div class="row">
          <div class = "btn btn-outline-light active"> author <%= p.id %></div>
        </div>
        <!-- wea 1-->
        <div class="row"> 

        <div class="col-md-8">
        
        <div class = "row" >
          <div class="btn btn-outline-light active "><%= p.created_at %></div>
        </div>

        <div class="row"><div class = "btn btn-outline-light active"> Solved</div></div>
        </div class = "col-md-8">

        <div style="margin-left:0px">
          <div class="thumbnail thumb-box"></div>

          <div class="caption" style="text-align:center;">
            <%if current_user && current_user.role == 1%>
            <%= link_to like_post_path(p), class: "like", method: :put do %>
              <button type="button" class="btn btn-info" aria-label="Left Align">
                <span class="fa fa-thumbs-up" aria-hidden="true"></span>
                <span class="badge"><%= p.get_upvotes.size %></span>
              </button>
            <% end %>
            <%else%>
              <button type="button" class="btn btn-info" aria-label="Left Align">
                <span class="fa fa-thumbs-up" aria-hidden="true"></span>
                <span class="badge"><%= p.get_upvotes.size %></span>
              </button>
            <% end -%>

            <%if current_user && current_user.role == 1%>
            <%= link_to unlike_post_path(p), class: "like", method: :put do %>
              <button type="button" class="btn btn-info" aria-label="Left Align">
                <span class="fa fa-thumbs-down" aria-hidden="true"></span>
                <span class="badge"><%= p.get_downvotes.size %></span>
              </button>
            <% end %>
            <%else%>
              <button type="button" class="btn btn-info" aria-label="Left Align">
                <span class="fa fa-thumbs-down" aria-hidden="true"></span>
                <span class="badge"><%= p.get_downvotes.size %></span>
              </button>
            <% end -%>
          </div>

          <button class="btn"></button>
          <button class="btn"></button>

        </div>  

        
        </div>

        <hr/>
        <div class="row">
       
       <%if current_user%>   
       <div class = " btn btn-outline-light active"><%= link_to 'Report', report_path %></div>
       <% end -%>   
          
        </div>
        </div>
        <hr />
          
        </div>
        
      <% end %>
    </div>
</div>



</body>
</html>
