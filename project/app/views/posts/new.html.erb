<!DOCTYPE html>
<html>
<head>


</head>

<body>
	
	<div class="row">
		<div class="col-md-2"></div>
	    <div class = "col-md-4">
	      <h1>My new post</h1>
	      <%= form_for(:newest, url: my_new_post_path) do |f| %>
	      <div class="input-group mb-3">
	        <%= f.text_field :title, class: 'form-control', placeholder: "title" %>
	      </div>

	      <div class="input-group mb-3">
	        <%= f.text_field :description, class: 'form-control', placeholder: "Description" %>
	      </div>

	      <div class="input-group mb-3">
	        <%= f.text_area :body, class: 'form-control', placeholder: "Please, be nice!" %>
	      </div> 
	      
	      <div class="input-group mb-3">
	        <%= f.text_field :country, class: 'form-control', placeholder: "Country" %>
	      </div>

	      <div class="input-group mb-3">
	        <%= f.text_field :city, class: 'form-control', placeholder: "City" %>
	      </div>

	      
	      <%= f.submit "Publish", class: "btn btn-outline-dark", style: "float: right;" %>
	      <% end -%>
	    </div>

		<div class="col-md-4">
			<div class="row" style="margin-top: 55px">
				<div class="col-md-6">
				<ul class = "navbar-nav">   
      				<a href = "http://localhost:3000/posts/new" class = "btn btn-dark"> <i class='fas fa-file-alt' style='font-size:60px;color:white'> </i></a>
    			</ul>

				</div>
				<div class="col-md-6">
    			<ul class = "navbar-nav">   
	      			<a href = "http://localhost:3000/posts/new" class = "btn btn-dark"> <i class='fas fa-image' style='font-size:60px;color:white'> </i></a>
	    			</ul>

				</div>

    		</div>
		</div>
		<div class="col-md-2"></div>
	</div>
	
	
</body>
</html>


